<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:theme="@style/Theme.AppChat"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_listChat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_centerVertical="true"
            app:civ_border_width="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userNameChatTv"
            android:text="Ten nguoi gui"
            android:layout_toRightOf="@+id/circle_listChat"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/messageChatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin nhan o day"
            android:layout_below="@id/userNameChatTv"
            android:layout_toRightOf="@id/circle_listChat"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/timestampChatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>