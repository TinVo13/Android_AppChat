<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneNumberActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:title="Verify OTP"/>

    <ImageView
        android:id="@+id/img_verify"
        android:layout_below="@+id/toolbar_verify"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_verify"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/et_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_verify"
        android:textAlignment="center"
        android:hint="Mã OTP của bạn..."
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_editext"
        android:inputType="number"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"/>
</RelativeLayout>